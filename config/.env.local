# DummyJSON API Configuration (Required for API tests)
DUMMY_API_BASE_URL=https://dummyjson.com
DUMMY_API_TIMEOUT=30000
API_RETRY_ATTEMPTS=2
API_RETRY_DELAY=1000

# Performance Test Thresholds  
RESPONSE_TIME_THRESHOLD=2000
SUCCESS_RATE_THRESHOLD=95
# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment Settings
NODE_ENV=local
ENVIRONMENT_NAME=Local Development

# Application Under Test URLs
BASE_URL=https://example.com
API_BASE_URL=https://example.com

# Authentication & Security
API_TOKEN=demo_token_local

# Test User Credentials (Demo accounts - replace with real test accounts)
ADMIN_USERNAME=admin@example.com
ADMIN_PASSWORD=AdminPassword123!

USER_USERNAME=user@example.com
USER_PASSWORD=UserPassword123!

GUEST_USERNAME=guest@example.com
GUEST_PASSWORD=GuestPassword123!

# Test Execution Configuration
HEADLESS=false
BROWSER_TIMEOUT=30000
SLOW_MO=100
MAX_WORKERS=2
RETRIES=1
CROSS_BROWSER_TESTING=false

# Reporting & Debugging
SCREENSHOT_ON_FAILURE=true
FULL_PAGE_SCREENSHOTS=true
RECORD_VIDEO=retain-on-failure
COLLECT_TRACE=retain-on-failure
OPEN_REPORT_ON_FAILURE=true

# Local Development
START_LOCAL_SERVER=false
LOCAL_SERVER_PORT=3000
DEBUG_MODE=true
VERBOSE_LOGGING=true

# CI/CD Configuration
CI=false

# Performance Testing Thresholds
MAX_LOAD_TIME=5000
MAX_FIRST_CONTENTFUL_PAINT=2000
MAX_LARGEST_CONTENTFUL_PAINT=4000

# Test Data Configuration
TEST_DATA_SOURCE=json
TEST_DATA_PATH=./data/test-data.json
GENERATE_RANDOM_DATA=true
FAKER_LOCALE=en_US

# Accessibility Testing
A11Y_STANDARD=WCAG2AA
A11Y_TAGS=wcag2a,wcag2aa,wcag21aa

# Mobile Testing
MOBILE_DEVICE=iPhone 12
TABLET_DEVICE=iPad Pro

# Security Testing
CHECK_SECURITY_HEADERS=false
EXPECTED_CSP_HEADER=default-src 'self'
