[
  {
    "pageName": "AuthApi",
    "folder": "auth",
    "baseRoute": "/auth",
    "cases": [
      {
        "methodName": "login",
        "description": "Login with valid credentials",
        "method": "POST",
        "data": {
          "username": "string",
          "password": "string"
        },
        "expectStatus": 200,
        "response": {
          "token": "string",
          "expiresIn": 3600,
          "user": {
            "id": 1,
            "username": "string",
            "email": "string"
          }
        },
        "validations": [
          {
            "description": "Login with invalid password",
            "data": {
              "username": "testuser",
              "password": "wrongpass"
            },
            "expectStatus": 401,
            "messageKey": "error.invalidCredentials",
            "errorResponse": {
              "error": "string",
              "code": 401
            }
          },
          {
            "description": "Login with missing username",
            "data": {
              "password": "somepass"
            },
            "expectStatus": 400,
            "messageKey": "error.usernameRequired",
            "errorResponse": {
              "error": "string",
              "field": "username"
            }
          }
        ]
      }
    ]
  },
  {
    "pageName": "UserApi",
    "folder": "user",
    "baseRoute": "/users",
    "cases": [
      {
        "methodName": "getUser",
        "description": "Get user by ID",
        "method": "GET",
        "params": {
          "id": 1
        },
        "expectStatus": 200,
        "response": {
          "id": 1,
          "username": "string",
          "email": "string",
          "profile": {
            "firstName": "string",
            "lastName": "string",
            "age": 30
          }
        },
        "validations": [
          {
            "description": "Get user with invalid ID",
            "params": {
              "id": 99999
            },
            "expectStatus": 404,
            "messageKey": "error.userNotFound",
            "errorResponse": {
              "error": "string",
              "code": 404
            }
          }
        ]
      }
    ]
  }
]
