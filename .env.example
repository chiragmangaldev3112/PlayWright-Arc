# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local, .env.staging, .env.production, etc.
# and update the values according to your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=local
ENVIRONMENT_NAME=Local Development

# =============================================================================
# APPLICATION UNDER TEST (AUT) CONFIGURATION
# =============================================================================
# Base URL for web application testing
BASE_URL=https://web.vitadev.vero-biotech.com/

# API Base URL for API testing
API_BASE_URL=https://web.vitadev.vero-biotech.com/

# DummyJSON API Configuration (for secure API testing)
# REQUIRED: Set this to the DummyJSON API endpoint
DUMMY_API_BASE_URL=https://dummyjson.com

# Optional DummyJSON API Settings
DUMMY_API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000
API_RESPONSE_TIME_THRESHOLD=2000
API_SUCCESS_RATE_THRESHOLD=95

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# API Authentication Token
API_TOKEN=your_api_token_here

# Test User Credentials (use test accounts only)
ADMIN_USERNAME=admin@example.com
ADMIN_PASSWORD=SecurePassword123!

USER_USERNAME=user@example.com
USER_PASSWORD=UserPassword123!

GUEST_USERNAME=guest@example.com
GUEST_PASSWORD=GuestPassword123!

# =============================================================================
# TEST EXECUTION CONFIGURATION
# =============================================================================
# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=30000
SLOW_MO=0

# Parallel Execution
MAX_WORKERS=4
RETRIES=1

# Cross-browser Testing
CROSS_BROWSER_TESTING=false

# =============================================================================
# REPORTING & DEBUGGING
# =============================================================================
# Screenshot Configuration
SCREENSHOT_ON_FAILURE=true
FULL_PAGE_SCREENSHOTS=true

# Video Recording
RECORD_VIDEO=retain-on-failure

# Trace Collection
COLLECT_TRACE=retain-on-failure

# Report Configuration
OPEN_REPORT_ON_FAILURE=true

# =============================================================================
# LOCAL DEVELOPMENT
# =============================================================================
# Start local server for testing
START_LOCAL_SERVER=false
LOCAL_SERVER_PORT=3000

# Debug Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================
# CI Environment Detection
CI=false

# Slack/Teams Notifications (for CI/CD)
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# =============================================================================
# DATABASE CONFIGURATION (if needed for test data)
# =============================================================================
# Test Database Connection
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=test_db
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Email Testing Service (e.g., MailHog, Ethereal)
EMAIL_SERVICE_URL=http://localhost:8025

# File Upload Testing
UPLOAD_TEST_FILES_PATH=./data/test-files

# =============================================================================
# PERFORMANCE TESTING
# =============================================================================
# Performance Thresholds
MAX_LOAD_TIME=5000
MAX_FIRST_CONTENTFUL_PAINT=2000
MAX_LARGEST_CONTENTFUL_PAINT=4000

# =============================================================================
# ACCESSIBILITY TESTING
# =============================================================================
# Accessibility Standards
A11Y_STANDARD=WCAG2AA
A11Y_TAGS=wcag2a,wcag2aa,wcag21aa

# =============================================================================
# MOBILE TESTING
# =============================================================================
# Device Emulation
MOBILE_DEVICE=iPhone 12
TABLET_DEVICE=iPad Pro

# =============================================================================
# SECURITY TESTING
# =============================================================================
# Security Headers Validation
CHECK_SECURITY_HEADERS=true
EXPECTED_CSP_HEADER=default-src 'self'

# =============================================================================
# CUSTOM TEST DATA
# =============================================================================
# Test Data Configuration
TEST_DATA_SOURCE=json
TEST_DATA_PATH=./data/test-data.json

# Dynamic Test Data Generation
GENERATE_RANDOM_DATA=true
FAKER_LOCALE=en_US

# =============================================================================
# JIRA INTEGRATION
# =============================================================================
# JIRA Instance Configuration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=PROJ

# JIRA API Settings
JIRA_TIMEOUT=10000
JIRA_MAX_RETRIES=3
